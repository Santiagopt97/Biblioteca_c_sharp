@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background: linear-gradient(to right, #ff7e5f, #feb47b);
    }
</style>

<div class="text-center">
    <div>
        <h1 class="display-4">Welcome to Riwi's Library</h1>
        <p>The place where books are adventures.</p>

        <div>
            <a href="@Url.Action("IndexBooks", "Books")">Pagina de libros</a>
        </div>



        <form class="form-inline my-2 my-lg-0 d-flex">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>

    <div class="my-4">
        <img src="https://media.admagazine.com/photos/618a68da72049e253173eac4/master/w_1600%2Cc_limit/62630.jpg"
            alt="Library Image" class="img-fluid border rounded" />
    </div>

    <div class="container px-4 text-center">
        <div class="row gx-5">
            <div class="col">
                <button type="button" class="btn btn-outline-primary btn-lg">Administrator</button>
            </div>
            <div class="col">
                @{
                    var userIndexUrl = Url.Action("IndexUser", "User");
                }
                <button type="button" class="btn btn-outline-primary btn-lg" data-url="@userIndexUrl"
                    onclick="window.location.href=this.getAttribute('data-url')">User</button>
            </div>
        </div>
    </div>
</div>